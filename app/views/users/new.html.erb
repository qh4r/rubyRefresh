<h1 align="center">Rejestracja</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
  <%= form_for @user, html: {class: 'form-horizontal', role: :form}, url: users_path(@user) do |u| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label 'Nazwa' %>
        </div>
        <div class="col-sm-8">
          <%= u.text_field :username, class: 'form-control', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label 'Emal' %>
        </div>
        <div class="col-sm-8">
          <%= u.text_field :email, class: 'form-control', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= u.label 'Hasło' %>
        </div>
        <div class="col-sm-8">
          <%= u.password_field :password, class: 'form-control', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= u.submit 'Utwórz', class: 'btn btn-lg btn-info' %>
        </div>
      </div>
  <% end %>
</div>