<h1 align="center">Witaj <%= @user.username %></h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 120%>
  </div>
</div>
<h5 class="center"><%= link_to 'Edytuj dane', edit_user_path(@user), class: 'btn btn-warning btn-lg' %></h5>
<h4 class="center">
  Artykuły należące do <%= @user.username %>
</h4>
<%= render partial: 'articles/article', collection: @user.articles %>
