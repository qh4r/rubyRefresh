<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, html: {class: 'form-horizontal', role: :form}) do |a| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= a.label "Tytuł", class: "labelka tytol" %>
          </div>
          <div class="col-sm-8">
            <%= a.text_field :title, class: 'form-control', placeholder: 'Tytuł artykułu', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= a.label :Opis %>
          </div>
          <div class="col-sm-8">
            <%= a.text_area :description, class: 'form-control', placeholder: 'Treść artykułu', rows: 10 %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <%= a.submit action, class: 'btn btn-primary btn-lg' %>
            <%= link_to "Wróć", articles_path, class: 'btn btn-lg btn-info' %>
          </div>
        </div>
    <% end %>
  </div>
</div>